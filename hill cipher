#include <stdio.h>
#include <string.h>
#include <stdlib.h>
void hillCipherEncrypt(int key[3][3], char message[]) {
    int len = strlen(message);
    int encrypted[len];
	for (int i = 0; i < len; i += 3) {
        int block[3];
        for (int j = 0; j < 3; j++) {
            if (i + j < len)
                block[j] = message[i + j] - 'A';
            else
                block[j] = 0;
        }
    for (int j = 0; j < 3; j++) {
            encrypted[i + j] = 0;
            for (int k = 0; k < 3; k++) {
                encrypted[i + j] += key[j][k] * block[k];
            }
            encrypted[i + j] %= 26;
        }
    }

    for (int i = 0; i < len; i++) {
        message[i] = (char)(encrypted[i] + 'A');
    }
}

int main() {
    int key[3][3] = {
        {6, 24, 1},
        {13, 16, 10},
        {20, 17, 15}
    };
	char message[100];
    printf("Enter the message (in uppercase, no spaces): ");
    scanf("%s", message);
	hillCipherEncrypt(key, message);
	printf("Encrypted message: %s\n", message);

}
